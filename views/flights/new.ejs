<%- include('../partials/header') %>
  <form action="/flights" method="POST">
    <label>Airline:
      <input type="text" name="airline">
    </label><br>
    <label>Airport:
      <input type="text" name="airport">
    </label><br>
    <label>Flight Number:
      <input type="text" name="flightNo" value="">
    </label><br>
    <label>Departure:
      <input type="datetime-local" name="departs" value="<%= departsDate %>">
    </label><br>
    <button type="submit">Add Flight</button>
  </form>
  <p>
    <%= errorMsg %>
  </p>
  <%- include('../partials/footer') %>